.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.tabs {
  display: flex;
  overflow-x: scroll;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
}

.tab {
  padding: 10rpx 30rpx;
  margin-right: 10rpx;
  background-color: #f0f0f0;
  border-radius: 50rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  flex-shrink: 0;
}

.tab.active {
  background-color: #4caf50;
  color: #fff;
}

.order-list {
  display: flex;
  flex-direction: column;
}

.order-item {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.item-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.item-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-status {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 28rpx;
  color: #f44336;
  font-weight: bold;
}

.btn-pay {
  background-color: #f44336;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.btn-detail {
  background-color: #4caf50;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 50rpx;
}
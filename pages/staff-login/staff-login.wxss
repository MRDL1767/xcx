.login-container {
  padding: 20px;
  background-color: #f8f8f8;
}

.login-header {
  margin-bottom: 20px;
}

.login-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.login-form {
  margin-bottom: 20px;
}

.form-item {
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-item input {
  width: 100%;
  height: 40px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.send-code-btn {
  width: 120px;
  height: 30px;
  background-color: #4CAF50;
  color: #fff;
  padding: 5px;
  border: none;
  border-radius: 5px;
  font-size: 12px;
}

.login-btn {
  margin-top: 20px;
}

.login-btn button {
  width: 100%;
  height: 40px;
  background-color: #4CAF50;
  color: #fff;
  padding: 10px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.error-tip {
  font-size: 12px;
  color: #f00;
  margin-top: 5px;
}
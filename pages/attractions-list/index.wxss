.container {
  padding: 20rpx;
}

.search-bar {
  margin-bottom: 20rpx;
}

.tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.tab {
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}

.tab.active {
  background-color: #4caf50;
  color: #fff;
}

.attraction-list {
  display: flex;
  flex-direction: column;
}

.attraction-item {
  padding: 20rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
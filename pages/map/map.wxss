.map-container {
  width: 100%;
  height: 100vh;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

.info-card {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.park-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.park-address {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.distance {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.nav-btn {
  background: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.nav-btn:active {
  opacity: 0.9;
}
.container {
  padding: 20px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.order-status {
  background-color: #4caf50;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.order-info {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.value.total {
  font-weight: bold;
  color: #f44336;
}

.qr-code-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.qr-code {
  width: 300rpx;
  height: 300rpx;
  margin: 10rpx auto;
}

.qr-placeholder {
  font-size: 28rpx;
  color: #999;
  margin-top: 50rpx;
}

.refresh-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4caf50;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  text-align: center;
}

.action-buttons {
  margin-top: 20rpx;
}

.pay-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f44336;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  text-align: center;
}

.repurchase-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4caf50;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  text-align: center;
}
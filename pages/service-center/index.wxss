.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.service-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}

.service-item {
  width: 48%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.service-item:hover {
  transform: scale(1.05);
}

.service-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-top: 10rpx;
}
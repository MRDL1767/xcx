.container {
  min-height: 100vh;
  background: #f7f8fa;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 10rpx 0;
}

.tab-item.active {
  color: #f2826a;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #f2826a;
  border-radius: 2rpx;
}

.attractions-list {
  padding: 20rpx;
}

.empty-state {
  padding: 100rpx 0;
}

.attraction-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
}

.card-image {
  position: relative;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.status {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
}

.status-open {
  background: #07c160;
}

.status-closed {
  background: #969799;
}

.card-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.main-info {
  flex: 1;
  margin-right: 20rpx;
}

.name-tag {
  margin-bottom: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.tags {
  display: inline-flex;
  gap: 8rpx;
  margin-top: 8rpx;
  flex-wrap: wrap;
}

.description {
  font-size: 26rpx;
  color: #666;
  margin: 8rpx 0;
}

.bottom-info {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wait-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.wait-time van-icon {
  margin-right: 6rpx;
  color: #f2826a;
}

.price-info {
  text-align: right;
}

.price {
  font-size: 34rpx;
  color: #f2826a;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.notice-btn {
  padding: 10rpx;
}